int is_ocupado()
{
	if (estah ocupado)
		return 1
	return 0;
}

/*envia um passageiro ao onibus*/
void give_passageiro()
{
	return primeiro_da_fila();
}

/*envia um onibus ao passageiro*/
busao_t give_onibus()
{
	if (porta_fechada)
		return NULL;
	else
		return id_do_busao_parado;
}

int do_embarque(passageiro_t p, onibus o, ponto p)
{
	if (first_queue(p)) {
		dequeue_fila_passageiros(p);
		enter_busao(o, p);
		return 1;
	}
	return 0;
}

